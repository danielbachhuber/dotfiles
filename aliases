alias subl=code
alias v=vagrant
alias wpcs=phpcs
alias wp='~/wp-cli/bin/wp'
alias artisan="php artisan"
alias hosts='sudo vim /etc/hosts'

alias reload!='. ~/.zshrc'
alias targz='tar -cvzf'
alias untargz='tar -zxvf'
alias svn-git-up='bash ~/.dotfiles/svn-git-up'
alias grun='/usr/local/bin/gr'

# git aliases
unalias gpu # Added by ZSH git plugin :(
alias gl='git pull --prune'
alias glog="git log --graph --pretty=format:'%Cred%h%Creset %an: %s - %Creset %C(yellow)%d%Creset %Cgreen(%cr)%Creset' --abbrev-commit --date=relative"
# alias gp='git push origin HEAD' # Using `gp` from ZSH Git plugin
alias gpo='git push -u origin $(git rev-parse --abbrev-ref HEAD)'
alias gd='git diff'
alias gf='git fetch origin'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gcom='git checkout master'
alias gcup='git checkout master && git remote prune origin && git branch --merged | grep -v master | xargs git branch -d'
alias gcb='git copy-branch-name'
alias gmv='git mv'
alias grm='git rm'
alias gb='git branch'
alias gpr='gh pr create'
alias gpu='git pull'
alias gs='git status -sb' # upgrade your git if -sb breaks for you. it's fun.
